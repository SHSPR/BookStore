@model SmallCartViewModel

@if (Model != null)
{
    <p>Товаров в корзине: <span class="badge badge-primary">@Model.NumberOfItems</span></p>
    <p>Итого: <b>@Model.TotalAmount.ToString()</b></p>
    <a class="btn btn-primary" asp-controller="Cart" asp-action="Index">Корзина</a>
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Очистить</a>
}
else
{
    <p class="lead m-0">Корзина Пуста</p>
}

