@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Digital Bookstore</h1>
    <p>A book right in your device</p>
</div>

<div class="container">
    <div class="row row-cols-4">
        @{
            foreach (var products in ViewBag.Products)
            {
                <div class="col mb-3">
                    <div class="card">
                        <img src="@products.Cover" class="w-75 mx-auto card-img-top" style="height: 300px" alt="...">
                        <div class="card-body text-center">
                            <h5 class="card-title">@products.Author <br> @products.Title</h5>
                            <p class="card-text"></p>                            
                            <a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@products.ProductID">В Корзину</a>
                            <a href="Product/@products.ProductID" class="btn btn-primary">Подробнее..</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
        